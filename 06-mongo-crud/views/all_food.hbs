{{#extends "base"}}

{{#block "content"}}
<a href="/food/add" class="btn btn-primary">Add food</a>
<table class="table">
<thead>
    <th>id</th>
    <th>name</th>
    <th>calories</th>
    <th>tag</th>
</thead>
    {{#each foodRecords }}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.tags}}</td>
            <td><a href="/food/{{this._id}}/edit" class="btn btn-primary">Edit</a></td>
            <td><a href="/food/{{this._id}}/delete" class="btn btn-danger">Delete</a></td>
        </tr>
    {{/each}}
</table>
{{/block}}

{{/extends}}