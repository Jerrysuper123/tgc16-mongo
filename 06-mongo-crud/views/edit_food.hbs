{{#extends "base"}}
  {{#block "content"}}
    <h1>{{food.name}}</h1>

    <form action="" method="POST">
      <div>
        <label for="">name:</label>
        <input type="text" class="form-control" id="name" name="foodName" value={{food.name}} 
        
        />
      </div>

      <div>
        <label for="">calories</label>
        <input type="text" class="form-control" id="calories" name="calories" value={{food.calories}} />
      </div>

      <div>
          <label for="">tags</label>
          {{!-- <input type="text" placeholder="please separate tag with a comma" class="form-control" name="tags"> --}}
          <div class="form-check form-check-inline">
              <div class="mx-1">
                        <input name="tags" class="form-check-input" type="checkbox" value="sweet"
                        
                        {{!-- if sweet is found in food.tags array, put in the checked --}}
                        {{#inArray food.tags "sweet"}}
                        checked
                        {{/inArray}}

                        >
              <label for="" class="form-check-lable">sweet</label>

              </div>
        
            <div>
                       <input name="tags" class="form-check-input ms-1" type="checkbox" value="organic"
                       
                        {{#inArray food.tags "organic"}}
                        checked
                        {{/inArray}}
                       >
              <label for="" class="form-check-lable">organic</label>
            </div>
        
            
            <div>  
            <input name="tags" class="form-check-input ms-1" type="checkbox" value="homecooked"
                        {{#inArray food.tags "homecooked"}}
                        checked
                        {{/inArray}}
                           >
              <label for="" class="form-check-lable">homecooked</label>

            </div>
      
          </div>
      </div>

      <input type="submit" value="submit" class="btn btn-primary mt-3">

    </form>

  {{/block}}
{{/extends}}